<h1>Edit Account</h1>
 
<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Update" %>
<% end %>
 


<% content_for :action_links do %>
<%= link_to("Delete user", { :action => "destroy", :id => @user },
	  :confirm => "Are you sure you want to delete this user?",
	  :method => :delete) %>
<% end %>